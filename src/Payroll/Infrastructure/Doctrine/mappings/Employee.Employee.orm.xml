<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="https://www.doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://www.doctrine-project.org/schemas/orm/doctrine-mapping
                        https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Payroll\Domain\Employee\Employee" table="employee">

        <id name="id" type="integer"><generator strategy="AUTO"/></id>

        <many-to-one field="department" target-entity="App\Payroll\Domain\Department\Department">
            <join-column name="department_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <field name="name" type="string"/>

        <field name="surname" type="string"/>

        <field name="yearsOfWork" type="integer"/>

        <embedded name="baseSalary" class="App\Payroll\Domain\Shared\Value\Money"/>

        <embedded name="bonus" class="App\Payroll\Domain\Shared\Value\Money"/>

        <embedded name="totalSalary" class="App\Payroll\Domain\Shared\Value\Money"/>

    </entity>

</doctrine-mapping>
